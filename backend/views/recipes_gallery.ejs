    <h1>Recipe Gallery</h1>

    <% if(searchResults != null) { %>
        <div class="gallery">
            <% searchResults.forEach(recipe => { %>
                <div class="recipe">
                    <a href="/recipe/<%= recipe.id %>">
                        <img src="<%= recipe.image %>" alt="<%= recipe.title %>">
                        <h2><%= recipe.title %></h2>
                    </a>
                </div>
            <% }); %>
        </div>
      <% } else { %>
        <p>No items found.</p>
      <% } %>

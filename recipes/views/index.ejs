<head>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<%- include("partials/navbar.ejs") %>

<!-- Latest Start -->

<section class="latest-section">
    <div class="section-header">
        Latest Publications
    </div>
    <div class="latest-publications">
        <% if(food && food.latest.length > 0) { %>
            <% food.latest.forEach(function(publication, index){ %>
                <div class="latest-publication">
                    <a href="/publication/<%= publication._id %>">
                        <% if (publication.image.startsWith('https')) { %>
                            <img src="<%- publication.image %>" alt="<%- publication.name %>" loading="lazy">
                        <% } else { %>
                            <img src="/uploads/<%- publication.image %>" alt="<%- publication.name %>" loading="lazy">
                        <% } %>
                        <div class="publication-name"><%= publication.name %></div>
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No items found.</p>
        <% } %>
    </div>
    <div class="section-header">
      <a href="/explore-latest">View more</a>
  </div>
</section>

<!-- Latest End -->

<form action="/submit-publication" method="GET">
  <button type="submit">Submit a new publication</button>
</form>

        
    

